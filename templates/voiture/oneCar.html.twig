{% extends 'layout.html.twig' %} {% block title %} {{ parent() }} Modification{%
endblock %} {% block content %}
<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-info">Titre : {{ car.titre }}</h1>
  <div>
    <br /><br />
    <h5>Marque : {{ car.marque }} ...</h5>
    <h6>
      Modèle
      {{ car.model}}
    </h6>
    {% if car.photo is not null %}
    <img width="30%" src="{{ asset('uploads/' ~ car.photo) }}">
    {% endif %}
    <h6>
      {{ car.description }}
    </h6>
    <h6 class='text-danger'>Prix /jour : {{ car.prixJournalier}}</h6>
  </div>
  <p class="text-success p-3"><a href="{{ path("app_voiture")}}"><em> ← Retour</em></a></p>
</div>
{% endblock %}