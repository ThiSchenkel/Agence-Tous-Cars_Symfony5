{% extends 'layout.html.twig' %} 

{% block title %} admin vehicules{% endblock %}

{% block content %}
<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-info ">Liste des fiches véhicules</h1>
  <table class="table table-striped m-5">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Titre</th>
      <th scope="col">Marque</th>
      <th scope="col">Modèle</th>
      <th scope="col">Desc</th>
      <th scope="col">Photo</th>
      <th scope="col">Prix/jour</th>
      <th scope="col">Date enregistrement</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {% for car in adminVoitures %}
    <tr>
      <th scope="row">{{ car.id}}</th>
      <td>{{ car.titre}}</td>
      <td>{{ car.marque}}</td>
      <td>{{ car.model}}</td>
      <td>{{ car.description | slice(0,50)}}...</td>
      <td><img width="50%" src="{{ asset('uploads/' ~ car.photo) }}"></td>
      <td>{{ car.prixJournalier}}</td>
      <td>{{ car.dateEnregistrement | date("d/m/Y")}}</td>
      <td>  
              <a href="{{ path("update_car", {id:car.id})}}" id="update"
                ><i class="fas fa-edit mx-1 text-success"></i>
              </a>
              <a href="{{ path("delete_car", {id:car.id})}}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm(`Etes vous sûr de vouloir supprimer cette voiture? `)"></i></a>
          </td>
    </tr>
    {% endfor %}
  </tbody>
  </table>
</div>
{% endblock %}