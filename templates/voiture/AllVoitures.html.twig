{% extends 'layout.html.twig' %} {% block title %}{{ parent() }}{% endblock %}
{% block content %}
<div class="row mt-5 justify-content-center text-center">

  <h1 class="text-success">Les tutures qu'on aime </h1>

  <div class="container">
    <br /><br />
    <div class="row">
      {% for car in AllVoitures %}
      <div class="col col-md-6 mt-3">
        <div class="card" style="width: 100%">
          <div class="card-body">
            <h5 class="card-title">{{ car.titre }}</h5>
            {% if car.photo is not null %}
                    <img width="100%" src="{{ asset('uploads/' ~ car.photo) }}">
                {% endif %}
            <p class="card-text">
              Date de création :
              {{ car.dateEnregistrement | date("d/m/y \à H\\hi")}}
            </p>
            <h6>Titre : {{ car.titre}}</h6>
            <h6>Marque : {{ car.marque}}</h6>
            <h6>Model : {{ car.model}}</h6>
            <h6 class='text-danger'>Prix /jour : {{ car.prixJournalier}}</h6>
            <p class="card-text">{{ car.description | slice(0,150)}} ...</p>
            <button class="btn btn-warning"><a href="{{ path("one_car", {id:car.id})}}">Lire la suite</a></button>
          </div>
        </div>
      </div>

      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
