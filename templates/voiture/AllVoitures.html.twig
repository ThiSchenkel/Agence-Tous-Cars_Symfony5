{% extends 'layout.html.twig' %} {% block title %}{{ parent() }}{% endblock %}
{% block content %}
<div class="row mt-5 justify-content-center text-center">

  <h1 class="text-success">Voiture en location</h1>

  <div class="container">
    <br /><br />
    <div class="row">
      {% for car in AllVoitures %}

      <div class="col col-md-3 mt-3">
        <div class="card" style="width: 18rem">
          <div class="card-body">
            <div>
              <a href="{{ path("update_car", {id:car.id})}}"
                ><i class="fas fa-edit mx-1 text-success"></i>
              </a>
              <a href="{{ path("delete_car", {id:car.id})}}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm(`Etes vous sûr de vouloir supprimer cette voiture? `)"></i></a>
            </div>
            <h5 class="card-title">{{ car.titre }}</h5>
            <p class="card-text">
              Date de création :
              {{ car.dateEnregistrement | date("d/m/y \à H\\hi")}}
            </p>
            <h6>Titre : {{ car.titre}}</h6>
            <h6>Marque : {{ car.marque}}</h6>
            <h6>Model : {{ car.model}}</h6>
            <h6 class='text-danger'>Prix /jour : {{ car.prixJournalier}}</h6>
            <p class="card-text">{{ car.description | slice(0,150)}} ...</p>
            <button class="btn btn-warning"><a href="{{ path("one_car", {id:car.id})}}">Lire la suite</a></button>

          </div>
        </div>
      </div>

      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
